{
    "buildCommand": "npm run build:vercel",
    "outputDirectory": ".next",
    "framework": "nextjs",
    "functions": {
        "src/app/api/**/*.ts": {
            "runtime": "nodejs20.x"
        }
    },
    "build": {
        "env": {
            "NODE_ENV": "production",
            "NEXT_TELEMETRY_DISABLED": "1"
        }
    },
    "installCommand": "npm install --legacy-peer-deps"
}
